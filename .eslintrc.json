{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", {
            "vars": "local",
            "args": "none"
        }],
        "semi": "off",
        "func-style": "error",
        "no-console": "error",
        "no-unused-expressions": "off",
        "no-plusplus": "error"
    }
}