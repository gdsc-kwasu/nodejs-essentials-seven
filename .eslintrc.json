{
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "pluggin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": { "ecmaVersion": 2018 },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "prettier": true,
        "error": {
            "allowForLoopAfterthoughts": true,
            "no-console": "error",
            "prettier/prettier": "error",
            "no-var": "error",
            "no-plusplus": "error",
            "no-unused-expressions": "error",
            "semi": "error"
        }
    }
}
